-- own personal used 
-- Unstable
local Unstable = {}

function Unstable.CreateLib(title, theme)
    local gui = Instance.new("ScreenGui")
    gui.Name = title
    gui.ResetOnSpawn = false
    gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0.6, 0, 0.7, 0)
    mainFrame.Position = UDim2.new(0.2, 0, 0.15, 0)
    mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    mainFrame.Parent = gui

    local tabs = {}

    function tabs:NewTab(tabName)
        local tabFrame = Instance.new("Frame")
        tabFrame.Size = UDim2.new(1, 0, 1, 0)
        tabFrame.BackgroundTransparency = 1
        tabFrame.Visible = false
        tabFrame.Parent = mainFrame

        local sections = {}

        function sections:NewSection(sectionName)
            local sectionFrame = Instance.new("Frame")
            sectionFrame.Size = UDim2.new(1, 0, 0, 100)
            sectionFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            sectionFrame.Parent = tabFrame

            local content = {}

            -- Create Button
            function content:NewButton(buttonText, info, callback)
                local button = Instance.new("TextButton")
                button.Size = UDim2.new(0.8, 0, 0, 30)
                button.Position = UDim2.new(0.1, 0, 0, 10)
                button.Text = buttonText
                button.Parent = sectionFrame

                button.MouseButton1Click:Connect(callback)
            end

            -- Create Slider
            function content:NewSlider(sliderText, info, maxValue, minValue, callback)
                local sliderFrame = Instance.new("Frame")
                sliderFrame.Size = UDim2.new(0.8, 0, 0, 50)
                sliderFrame.Position = UDim2.new(0.1, 0, 40, 0)
                sliderFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                sliderFrame.Parent = sectionFrame

                local slider = Instance.new("TextLabel")
                slider.Size = UDim2.new(1, 0, 0.5, 0)
                slider.Position = UDim2.new(0, 0, 0, 0)
                slider.Text = sliderText
                slider.Parent = sliderFrame

                local sliderBar = Instance.new("Frame")
                sliderBar.Size = UDim2.new(1, 0, 0.5, 0)
                sliderBar.Position = UDim2.new(0, 0, 0.5, 0)
                sliderBar.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
                sliderBar.Parent = sliderFrame

                local input = Instance.new("TextBox")
                input.Size = UDim2.new(0.2, 0, 0.5, 0)
                input.Position = UDim2.new(0.8, 0, 0, 0)
                input.Text = tostring(minValue)
                input.Parent = sliderFrame

                input.FocusLost:Connect(function()
                    local value = tonumber(input.Text)
                    if value then
                        callback(value)
                    end
                end)
            end

            -- Create Dropdown
            function content:NewDropdown(dropdownText, info, options, callback)
                local dropdownFrame = Instance.new("Frame")
                dropdownFrame.Size = UDim2.new(0.8, 0, 0, 50)
                dropdownFrame.Position = UDim2.new(0.1, 0, 100, 0)
                dropdownFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                dropdownFrame.Parent = sectionFrame

                local dropdownLabel = Instance.new("TextLabel")
                dropdownLabel.Size = UDim2.new(1, 0, 0.5, 0)
                dropdownLabel.Text = dropdownText
                dropdownLabel.Parent = dropdownFrame

                local dropdownMenu = Instance.new("Frame")
                dropdownMenu.Size = UDim2.new(1, 0, 1, 0)
                dropdownMenu.Position = UDim2.new(0, 0, 0.5, 0)
                dropdownMenu.Parent = dropdownFrame

                for _, option in ipairs(options) do
                    local optionButton = Instance.new("TextButton")
                    optionButton.Size = UDim2.new(1, 0, 0.2, 0)
                    optionButton.Text = option
                    optionButton.Parent = dropdownMenu

                    optionButton.MouseButton1Click:Connect(function()
                        callback(option)
                    end)
                end
            end

-- Create Label
function content:NewLabel(labelText)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.8, 0, 0, 30)
    label.Position = UDim2.new(0.1, 0, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = labelText
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.Gotham
    label.TextScaled = true
    label.Parent = sectionFrame
end

            -- Create TextBox
            function content:NewTextBox(placeholderText, info, callback)
                local textBox = Instance.new("TextBox")
                textBox.Size = UDim2.new(0.8, 0, 0, 30)
                textBox.Position = UDim2.new(0.1, 0, 150, 0)
                textBox.PlaceholderText = placeholderText
                textBox.Parent = sectionFrame

                textBox.FocusLost:Connect(function(enterPressed)
                    if enterPressed then
                        callback(textBox.Text)
                    end
                end)
            end

            return content
        end

        return sections
    end

    return tabs
end

return Unstable
